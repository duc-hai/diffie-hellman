<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Diffie-Hellman Key Exchange</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />

  <link rel="stylesheet" href="/css/dhke.css">
</head>

<body>
  <div class="container center-align mt-5">
    <div>
      <h2 class="text-center">Alice</h2>
      <!-- <button id="ge1">Generate private key</button>
      <span id="key1"></span> -->
      <label for="key1" class="label">Enter the private key</label>
      <input type="number" name="key1" id="key1" class="form-control mt-2">
      <div class="mt-3">
        or
        <button class="btn btn-primary" id="generate-key1">Generate private key</button>
      </div>

      <div class="mt-5 key-dhke">A = <span id="A" class="text-bold">2138238128301</span></div>
      <div class="mt-5 key-dhke">Key A = <span id="KA" class="text-bold">2138238128301</span></div>
    </div>

    <div class="public">
      <div class="public">
        <div class="form-group center-align">
          <label for="bit">Choose length (bit) of prime number p</label>
          <input type="number" name="bit" id="bit" class="form-control" style="width: 40%" value="10">
        </div>
        <button id="generatePri" class="btn btn-secondary mt-3">
          Generate prime number p and primitive number g
        </button>

        <div class="result-pri mt-2" id="rel-pri" style="display: none">
          <span>p: </span><span id="relPrime" style="font-weight: bold;">8123812380123801</span> <br/>
          <span>g: </span><span id="relPrimitive" style="font-weight: bold;">8123812380123801</span>
        </div>
      </div>

      <button style="display: block; margin-top: 200px;" id="btn-submit" class="btn btn-success disabled">Trao đổi</button>
    </div>

    <div>
      <h2 class="text-center">Bob</h2>
      <label for="key2" class="label">Enter the private key</label>
      <input type="number" name="key2" id="key2" class="form-control mt-2">
      <div class="mt-3">
        or
        <button class="btn btn-primary" id="generate-key2">Generate private key</button>
      </div>
      
      <div class="mt-5 key-dhke">B = <span id="B" class="text-bold">2138238128301</span></div>
      <div class="mt-5 key-dhke">Key B = <span id="KB" class="text-bold">2138238128301</span></div>
    </div>
  </div>

  <div class="loading-container" style="display: none">
    <div class="loader"></div>
    <p>Loading...</p>
  </div>
</body>

<script src="/js/dhke.js"></script>
</html>